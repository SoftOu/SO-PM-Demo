@model SOPasswordManager.Models.ProjectModel
<!-- Modal content-->

@if (Model.ProjectId == 0)
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 id="modaltitle" class="modal-title">Add Project</h4>        
    </div>
}
else
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 id="modaltitle" class="modal-title">Edit Project</h4>
    </div>
}

<div class="modal-body">
    <div class="row">
        <div class="col">
            <form asp-controller="Projects" asp-action="AddProject" method="post" id="AddProjectForm" role="form">
                <input type="hidden" id="hdnProject_ID" name="ProjectId" value="@Model.ProjectId" />
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group col-md-6">
                            <label>Client</label>
                            <select asp-for="ClientId" tabindex="1" data-val-required="Please select client." class="form-control m-select2" style="width:100%;" asp-items="@(new SelectList(@ViewBag.ClientList, "Value", "Text"))">
                                <option>Select Client</option>
                            </select>
                            <span asp-validation-for="ClientId"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label>Project</label>
                            <input type="text" asp-for="ProjectName" name="ProjectName" data-val-required="Project name is required." class="form-control required" placeholder="Project Name" tabindex="2" />
                            <span asp-validation-for="ProjectName"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group col-md-12">
                            <label>Description</label>
                            <textarea asp-for="Description" class="form-control required" name="Description" data-val-required="Description is required." placeholder="Description" tabindex="3"></textarea>
                            <span asp-validation-for="Description"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group col-md-12">
                            <input type="submit" id="btnSave" class="btn btn-primary" value="Save">
                            <a href="#" class="btn btn-default " onclick="funcClose()">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>